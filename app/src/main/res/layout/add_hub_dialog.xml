<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_cancel_save_ss"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        layout_editor_absoluteX="115dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        app:layout_constraintEnd_toStartOf="@+id/button_save_ss"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_save_ss" />

    <Button
        android:id="@+id/button_save_ss"
        layout_editor_absoluteX="230dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_cancel_save_ss"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595" />

    <EditText
        android:id="@+id/editText_hub_id"
        layout_editor_absoluteX="68dp"
        layout_editor_absoluteY="117dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Enter HUB Name..."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editText_hub_code"
        app:layout_constraintEnd_toEndOf="@+id/editText_hub_code"
        app:layout_constraintStart_toStartOf="@+id/editText_hub_code" />

    <EditText
        android:id="@+id/editText_hub_code"
        layout_editor_absoluteX="101dp"
        layout_editor_absoluteY="330dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Enter HUB Code..."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button_cancel_save_ss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>